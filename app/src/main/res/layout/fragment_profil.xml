<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boarding_background"
    tools:context=".Screens.profil.ProfilFragment">

    <RelativeLayout
        android:id="@+id/content_profil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/actual_content"
                            android:layout_alignTop="@+id/actual_content"
                            android:layout_alignEnd="@id/actual_content"
                            android:layout_alignBottom="@id/actual_content" />

                        <LinearLayout
                            android:id="@id/actual_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="24dp">

                                <TextView
                                    android:id="@+id/text_welcome"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Selamat Datang"
                                    android:fontFamily="@font/baloobhai_medium"
                                    android:textColor="@color/black_main" />

                                <TextView
                                    android:id="@+id/text_nama_profil"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Muhamad Rizal Maulana"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:fontFamily="@font/baloobhai_medium"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/text_email_profil"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="muhamadrizalm29@gmail.com"
                                    android:fontFamily="@font/baloobhai_medium"
                                    android:textColor="@color/black_main"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/spacer_large"
                                    android:layout_marginBottom="@dimen/spacer_normal"
                                    android:text="Akun"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:fontFamily="@font/baloobhaijan"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:id="@+id/layout_edit_profil"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:orientation="vertical"
                                    android:paddingTop="@dimen/spacer_normal">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="@dimen/spacer_large">

                                        <ImageView
                                            android:id="@+id/iv_account_edit_profile"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            app:srcCompat="@drawable/edit_profil" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="16dp"
                                            android:layout_toEndOf="@id/iv_account_edit_profile"
                                            android:fontFamily="@font/baloobhai_medium"
                                            android:gravity="center_vertical"
                                            android:text="Edit Profil"
                                            android:textAllCaps="false"
                                            android:textColor="@color/black_main"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="@dimen/spacer_normal"
                                        android:background="#E0E0E0"
                                        android:orientation="vertical" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/layout_ganti_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:orientation="vertical"
                                    android:paddingTop="@dimen/spacer_normal">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="@dimen/spacer_large">

                                        <ImageView
                                            android:id="@+id/iv_account_change_password"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            app:srcCompat="@drawable/ganti_password" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="16dp"
                                            android:layout_toEndOf="@id/iv_account_change_password"
                                            android:gravity="center_vertical"
                                            android:text="Ganti Password"
                                            android:textAllCaps="false"
                                            android:textColor="@color/black_main"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="@dimen/spacer_normal"
                                        android:background="#E0E0E0"
                                        android:orientation="vertical" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacer_large"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/spacer_large"
                                    android:text="Lainnya"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:fontFamily="@font/baloobhaijan"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:id="@+id/layout_kebijakan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:orientation="vertical"
                                    android:paddingTop="@dimen/spacer_normal">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/spacer_large">

                                        <ImageView
                                            android:id="@+id/iv_account_kebijakan_privasi"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            app:srcCompat="@drawable/kebijakan_privasi" />

                                        <TextView
                                            android:id="@+id/textView22"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="16dp"
                                            android:layout_toEndOf="@id/iv_account_kebijakan_privasi"
                                            android:fontFamily="@font/baloobhai_medium"
                                            android:gravity="center_vertical"
                                            android:text="Kebijakan Privasi"
                                            android:textAllCaps="false"
                                            android:textColor="@color/black_main"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="@dimen/spacer_normal"
                                        android:background="#E0E0E0"
                                        android:orientation="vertical" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/layout_layanan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:orientation="vertical"
                                    android:paddingTop="@dimen/spacer_normal">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/spacer_large">

                                        <ImageView
                                            android:id="@+id/iv_account_ketentuan_layanan"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            app:srcCompat="@drawable/ketentuan_layanan"
                                            android:contentDescription="@string/todo" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="16dp"
                                            android:layout_toEndOf="@id/iv_account_ketentuan_layanan"
                                            android:gravity="center_vertical"
                                            android:text="Ketentuan Layanan"
                                            android:textAllCaps="false"
                                            android:textColor="@color/black_main"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="@dimen/spacer_normal"
                                        android:background="#E0E0E0"
                                        android:orientation="vertical" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>