<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/boarding_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.informasi.InformasiFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/layout_refresh_kategori"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout_card_corona"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:background="@drawable/corona_background"
                            android:contentDescription="@string/todo" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textKasusCovid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="16dp"
                        android:visibility="visible"
                        android:fontFamily="@font/baloobhaijan"
                        android:text="Maskerku melindungi kamu, maskermu melindungi aku!"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textUpdateKasus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/baloobhai_medium"
                        android:visibility="visible"
                        android:text="Berikut update kasus covid-19 yang terkonfirmasi."
                        android:textColor="@color/black_main"
                        android:textSize="14sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="@dimen/spacer_small"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:id="@+id/linear_kasus_informasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical|center_horizontal"
                            android:visibility="visible"
                            android:padding="10dp">

                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/progress_covid_informasi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:visibility="visible"
                                android:indeterminate="true"
                                app:indicatorColor="@color/colorPrimaryDark"
                                app:trackThickness="3dp" />

                            <LinearLayout
                                android:id="@+id/layout_wrapper_kasus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_marginBottom="15dp"
                                        android:contentDescription="@string/todo"
                                        android:src="@drawable/positif" />

                                    <TextView
                                        android:id="@+id/text_positif_informasi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:fontFamily="@font/baloobhaijan"
                                        android:textColor="@color/red_pink"
                                        android:textSize="14sp"
                                        tools:text="104092" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/baloobhai_medium"
                                        android:text="Positif" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_marginBottom="15dp"
                                        android:contentDescription="@string/todo"
                                        android:src="@drawable/sembuh" />

                                    <TextView
                                        android:id="@+id/text_sembuh_informasi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:fontFamily="@font/baloobhaijan"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="14sp"
                                        tools:text="50440" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/baloobhai_medium"
                                        android:text="Sembuh" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_marginBottom="15dp"
                                        android:contentDescription="@string/todo"
                                        android:src="@drawable/depression" />

                                    <TextView
                                        android:id="@+id/text_meninggal_informasi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:fontFamily="@font/baloobhaijan"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="14sp"
                                        tools:text="90370" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/baloobhai_medium"
                                        android:text="Meninggal" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/spacer_normal"
                        android:background="#E0E0E0"
                        android:layout_marginStart="@dimen/spacer_normal"
                        android:layout_marginEnd="@dimen/spacer_normal"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:id="@+id/layout_item_informasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacer_normal"
                        android:layout_marginEnd="@dimen/spacer_normal"
                        android:layout_marginBottom="90dp"
                        android:layout_marginTop="@dimen/spacer_small"
                        android:background="@drawable/card"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/menu_informasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/baloobhaijan"
                                    android:layout_marginTop="10dp"
                                    android:text="Informasi terkini"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/baloobhai_medium"
                                    android:text="Dapatkan informasi terupdate di aplikasi Sigeoo."
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black_main"
                                    android:textSize="16sp" />

                                <com.google.android.material.progressindicator.CircularProgressIndicator
                                    android:id="@+id/progress_informasi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:visibility="gone"
                                    android:indeterminate="true"
                                    app:indicatorColor="@color/colorPrimaryDark"
                                    app:trackThickness="3dp" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recycle_informasi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:visibility="visible"
                                    tools:listitem="@layout/view_item_informasi" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>